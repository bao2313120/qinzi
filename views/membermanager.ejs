<% include top %>
<div class="container-fluid" ng-controller="qinziController">
    <div class ="row">
        <%include left%>
        <div class="maincontent col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <div>
                <div>
                    <button type="button" class=" btn btn-lg btn-primary"><a href="/back/addgoods">新增会员活动</a></button>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">会员活动列表</div>
                    <table class="table">
                        <tr>
                            <th data-field="index">序号</th>
                            <th data-field="actionname" >活动名称</th>
                            <th data-field="isdel">是否展示</th>
                        </tr>
                        <tr ng-repeat="data in tabledata">
                            <td>{{data.index}}</td>
                            <td><a href="/back/toeditaction?actionid={{data.actionid}}">{{data.actionname}}</a></td>
                            <td>
                                <button ng-click="nocommend(data.actionid)" ng-if="data.isdel==1">取消展示</button>
                                <button ng-click="commend(data.actionid)" ng-if="data.isdel==2">展示</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script type="text/javascript">
    function indexFormatter(value,row,index) {
        return index;
    }
    app.controller('qinziController',function($scope,$http){
        getActions();
        function getActions(){
            $http({
                url:"/back/getactions",
                method:"GET"
            }).success(function(resObj){
                $scope.tabledata=resObj;
            })
        }
        //推荐
        $scope.commend =function(goodsid){
            $http({
                url:"/back/commendonegoods",
                method:"GET",
                params: {
                    'goodsid': goodsid
                }
            }).success(function(){
                var tabledata=$scope.tabledata;
                for(var i in tabledata){
                    if(tabledata[i].goodsid==goodsid){
                        tabledata[i].iscommend=1;
                    }
                }
            })
        }
        //取消推荐
        $scope.nocommend = function(goodsid){
            $http({
                url:"/back/discommendonegoods",
                method:"GET",
                params: {
                    'goodsid': goodsid
                }
            }).success(function(){
                var tabledata=$scope.tabledata;
                for(var i in tabledata){
                    if(tabledata[i].goodsid==goodsid){
                        tabledata[i].iscommend=2;
                    }
                }
            })
        }
    })
</script>
</html>
